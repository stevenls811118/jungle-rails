<h1>Sign up!</h1>

<div class="row">
  <div class="col-sm-6 col-sm-offset-1">
    
    <%= form_for @user do |f| %>
      
      <div class="form-group">
        <h5>Name:</h5>
        <%= f.text_field :name %>
      </div>

      <div class="form-group">
        <h5>Email:</h5>
        <%= f.text_field :email %>
      </div>

      <div class="form-group">
        <h5>Password:</h5>
        <%= f.password_field :password %>
      </div>

      <div class="form-group">
        <h5>Password Confirmation:</h5>
        <%= f.password_field :password_confirmation %>
      </div>
      <br>
      <%= f.submit "Sign up!", class: 'btn btn-primary' %>

    <% end %>

  </div>
